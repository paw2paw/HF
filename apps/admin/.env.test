# ==============================================
# E2E Test Environment
# ==============================================
# Loaded automatically by Next.js when NODE_ENV=test
# Points to dedicated test database — never touches dev data
# No secrets — safe to commit

DATABASE_URL="postgresql://hf_user:hf_password@localhost:5432/hf_test?schema=public"

# Test server on 3001 so dev server stays on 3000
PORT=3001
NEXTAUTH_URL="http://localhost:3001"
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Skip non-essential features during tests
HF_OPS_ENABLED=false
