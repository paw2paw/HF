{
  "id": "ADAPT-PERS-001",
  "title": "Big Five Personality Adaptation",
  "version": "1.0",
  "status": "Active",
  "date": "2026-01-30",
  "domain": "personality-adaptation",
  "specType": "ADAPT",
  "outputType": "ADAPT",
  "story": {
    "asA": "conversational agent",
    "iWant": "to adapt my communication style based on caller personality traits",
    "soThat": "interactions feel natural and personalized to each caller"
  },
  "context": {
    "applies": "Every call - uses personality measurements to compute style targets",
    "dependsOn": [
      "PERS-001"
    ],
    "assumptions": [
      "Personality traits are stable and measured from PERS-001",
      "Different personality profiles benefit from different communication styles",
      "Adaptation improves rapport and engagement"
    ]
  },
  "acceptanceCriteria": [
    {
      "id": "AC-ADAPT-PERS-1",
      "title": "Openness Adaptation",
      "given": "Caller's openness score is measured",
      "when": "Computing communication targets",
      "then": "Exploration vs structure target is set based on openness level",
      "measuredBy": [
        "openness_adaptation"
      ]
    },
    {
      "id": "AC-ADAPT-PERS-2",
      "title": "Conscientiousness Adaptation",
      "given": "Caller's conscientiousness score is measured",
      "when": "Computing communication targets",
      "then": "Structure and detail level targets are set based on conscientiousness",
      "measuredBy": [
        "conscientiousness_adaptation"
      ]
    },
    {
      "id": "AC-ADAPT-PERS-3",
      "title": "Extraversion Adaptation",
      "given": "Caller's extraversion score is measured",
      "when": "Computing communication targets",
      "then": "Energy and pacing targets are set based on extraversion level",
      "measuredBy": [
        "extraversion_adaptation"
      ]
    },
    {
      "id": "AC-ADAPT-PERS-4",
      "title": "Agreeableness Adaptation",
      "given": "Caller's agreeableness score is measured",
      "when": "Computing communication targets",
      "then": "Warmth and directness targets are set based on agreeableness",
      "measuredBy": [
        "agreeableness_adaptation"
      ]
    },
    {
      "id": "AC-ADAPT-PERS-5",
      "title": "Neuroticism Adaptation",
      "given": "Caller's neuroticism score is measured",
      "when": "Computing communication targets",
      "then": "Reassurance and emotional sensitivity targets are set",
      "measuredBy": [
        "neuroticism_adaptation"
      ]
    }
  ],
  "parameters": [
    {
      "id": "openness_adaptation",
      "name": "Openness Adaptation Target",
      "description": "Communication style target based on caller's openness: high openness = exploratory style, low openness = practical style",
      "section": "personality",
      "isAdjustable": true,
      "targetRange": {
        "min": 0.0,
        "max": 1.0
      },
      "config": {
        "traitId": "B5-O",
        "thresholdHigh": 0.65,
        "thresholdLow": 0.35,
        "adaptationRules": [
          {
            "condition": {
              "profileKey": "B5-O",
              "operator": "gt",
              "threshold": 0.65,
              "dataSource": "parameterValues"
            },
            "actions": [
              {
                "targetParameter": "BEH-PROACTIVE",
                "adjustment": "set",
                "value": 0.8,
                "rationale": "High openness - explore ideas freely"
              }
            ]
          },
          {
            "condition": {
              "profileKey": "B5-O",
              "operator": "lt",
              "threshold": 0.35,
              "dataSource": "parameterValues"
            },
            "actions": [
              {
                "targetParameter": "BEH-PROACTIVE",
                "adjustment": "set",
                "value": 0.4,
                "rationale": "Low openness - respond to stated needs"
              }
            ]
          }
        ]
      },
      "interpretationScale": [
        {
          "min": 0.65,
          "max": 1.0,
          "label": "Exploratory Style",
          "implication": "Explore ideas, creative discussions, intellectual curiosity"
        },
        {
          "min": 0.35,
          "max": 0.65,
          "label": "Balanced Style",
          "implication": "Mix of practical and exploratory approaches"
        },
        {
          "min": 0.0,
          "max": 0.35,
          "label": "Practical Style",
          "implication": "Concrete, practical, tried-and-true approaches"
        }
      ],
      "promptGuidance": {
        "whenHigh": "Feel free to explore tangential ideas. Offer creative alternatives and 'what if' scenarios. Engage with abstract or theoretical discussions. Don't rush to conclusions.",
        "whenLow": "Stay grounded in practical matters. Offer proven solutions over experimental ones. Use concrete examples, not abstract concepts. Be direct and efficient."
      }
    },
    {
      "id": "conscientiousness_adaptation",
      "name": "Conscientiousness Adaptation Target",
      "description": "Structure and detail level based on caller's conscientiousness: high = organized details, low = flexible overview",
      "section": "personality",
      "isAdjustable": true,
      "targetRange": {
        "min": 0.0,
        "max": 1.0
      },
      "config": {
        "traitId": "B5-C",
        "thresholdHigh": 0.65,
        "thresholdLow": 0.35,
        "adaptationRules": [
          {
            "condition": {
              "profileKey": "B5-C",
              "operator": "gt",
              "threshold": 0.65,
              "dataSource": "parameterValues"
            },
            "actions": [
              {
                "targetParameter": "BEH-FORMALITY",
                "adjustment": "set",
                "value": 0.7,
                "rationale": "High conscientiousness - structured, organized"
              }
            ]
          },
          {
            "condition": {
              "profileKey": "B5-C",
              "operator": "lt",
              "threshold": 0.35,
              "dataSource": "parameterValues"
            },
            "actions": [
              {
                "targetParameter": "BEH-FORMALITY",
                "adjustment": "set",
                "value": 0.3,
                "rationale": "Low conscientiousness - flexible, relaxed"
              }
            ]
          }
        ]
      },
      "interpretationScale": [
        {
          "min": 0.65,
          "max": 1.0,
          "label": "Structured Detail",
          "implication": "Organized, detailed, action-oriented responses"
        },
        {
          "min": 0.35,
          "max": 0.65,
          "label": "Balanced Structure",
          "implication": "Moderate detail with some flexibility"
        },
        {
          "min": 0.0,
          "max": 0.35,
          "label": "Flexible Overview",
          "implication": "Big picture focus, adaptable, less rigid"
        }
      ],
      "promptGuidance": {
        "whenHigh": "Structure responses clearly (numbered lists work well). Be specific about next steps and timelines. Follow up on previous commitments. Provide complete, detailed information.",
        "whenLow": "Don't overwhelm with details. Give the overview first, details on request. Be flexible about timelines. Keep things light and adaptable."
      }
    },
    {
      "id": "extraversion_adaptation",
      "name": "Extraversion Adaptation Target",
      "description": "Energy and conversational style based on caller's extraversion: high = energetic dialogue, low = measured pace",
      "section": "personality",
