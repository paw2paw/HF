            "actions": [
              {
                "targetParameter": "BEH-PAUSE-TOLERANCE",
                "adjustment": "set",
                "value": 0.85,
                "rationale": "Low extraversion - give introverts time"
              }
            ]
          }
        ]
      },
      "interpretationScale": [
        {
          "min": 0.65,
          "max": 1.0,
          "label": "Energetic Dialogue",
          "implication": "Dynamic, enthusiastic, expressive conversation"
        },
        {
          "min": 0.35,
          "max": 0.65,
          "label": "Moderate Energy",
          "implication": "Balanced conversational energy"
        },
        {
          "min": 0.0,
          "max": 0.35,
          "label": "Measured Pace",
          "implication": "Quieter, space-giving, reflective style"
        }
      ],
      "promptGuidance": {
        "whenHigh": "Match their energy level. Be expressive and enthusiastic. Encourage dialogue, ask follow-up questions. Keep the conversation flowing.",
        "whenLow": "Give them space and time to respond. Don't fill every silence. Be concise rather than verbose. Allow for reflection."
      }
    },
    {
