{
  "id": "ADAPT-LEARN-001",
  "title": "Learner Profile Adaptation",
  "version": "1.0",
  "status": "Active",
  "date": "2026-02-04",
  "domain": "learning",
  "specType": "SYSTEM",
  "outputType": "ADAPT",
  "specRole": "SYNTHESISE",
  "metadata": {
    "adaptation": {
      "inputSource": "LEARNER_PROFILE",
      "outputTarget": "CallerTarget",
      "adaptationMethod": "rule_based",
      "minimumConfidence": 0.6
    }
  },
  "story": {
    "asA": "teaching system",
    "iWant": "to adjust agent behavior based on inferred learner preferences",
    "soThat": "the learning experience feels personalized and adaptive"
  },
  "context": {
    "applies": "After learner profile has been aggregated",
    "dependsOn": [
      "LEARN-PROF-001"
    ],
    "assumptions": [
      "Learner profile exists with confidence > 0.6",
      "Behavior parameters exist in the system",
      "Adaptations are additive - don't override explicit caller settings"
    ]
  },
  "parameters": [
    {
      "id": "adapt_to_learning_style",
      "name": "Adapt to Learning Style",
      "description": "Adjust behavior targets based on visual/auditory/reading learning style",
      "section": "learning_adaptation",
      "config": {
        "adaptationRules": [
          {
            "condition": {
              "profileKey": "learningStyle",
              "value": "visual"
            },
            "actions": [
              {
                "targetParameter": "example-richness",
                "adjustment": "set",
                "value": 0.9,
                "rationale": "Visual learners benefit from concrete examples"
              },
              {
                "targetParameter": "analogy-usage",
                "adjustment": "set",
                "value": 0.85,
                "rationale": "Visual learners respond well to analogies"
              },
              {
                "targetParameter": "abstract-vs-concrete",
                "adjustment": "set",
                "value": 0.2,
                "rationale": "Visual learners prefer concrete over abstract"
              }
            ]
          },
          {
            "condition": {
              "profileKey": "learningStyle",
              "value": "reading"
            },
            "actions": [
              {
                "targetParameter": "explanation-depth",
                "adjustment": "set",
                "value": 0.85,
                "rationale": "Reading learners can handle detailed explanations"
              },
              {
                "targetParameter": "example-richness",
                "adjustment": "set",
                "value": 0.5,
                "rationale": "Reading learners prefer fewer, well-explained examples"
              },
              {
                "targetParameter": "abstract-vs-concrete",
                "adjustment": "set",
                "value": 0.7,
                "rationale": "Reading learners are comfortable with abstraction"
              }
            ]
          }
        ]
      }
    },
    {
      "id": "adapt_to_pace_preference",
      "name": "Adapt to Pace Preference",
      "description": "Adjust pacing and depth based on learner's preferred speed",
      "section": "pacing_adaptation",
      "config": {
        "adaptationRules": [
          {
            "condition": {
              "profileKey": "pacePreference",
              "value": "fast"
            },
            "actions": [
              {
                "targetParameter": "explanation-depth",
                "adjustment": "set",
                "value": 0.4,
                "rationale": "Fast pace learners want concise explanations"
              },
              {
                "targetParameter": "example-richness",
                "adjustment": "set",
                "value": 0.5,
                "rationale": "Fast pace learners prefer fewer examples"
              },
              {
                "targetParameter": "concept-density",
                "adjustment": "set",
                "value": 0.8,
                "rationale": "Fast pace learners can handle more concepts at once"
              }
            ]
          },
          {
            "condition": {
              "profileKey": "pacePreference",
              "value": "slow"
            },
            "actions": [
              {
                "targetParameter": "explanation-depth",
                "adjustment": "set",
                "value": 0.85,
                "rationale": "Slow pace learners benefit from thorough explanations"
              },
              {
                "targetParameter": "example-richness",
                "adjustment": "set",
                "value": 0.9,
                "rationale": "Slow pace learners need multiple examples"
              },
              {
                "targetParameter": "concept-density",
                "adjustment": "set",
                "value": 0.3,
                "rationale": "Slow pace learners need one concept at a time"
              },
              {
                "targetParameter": "repetition-frequency",
                "adjustment": "set",
                "value": 0.8,
                "rationale": "Slow pace learners benefit from repetition"
              }
            ]
          },
          {
            "condition": {
              "profileKey": "pacePreference",
              "value": "moderate"
            },
            "actions": [
              {
                "targetParameter": "explanation-depth",
                "adjustment": "set",
                "value": 0.65,
                "rationale": "Moderate pace needs balanced depth"
              },
              {
                "targetParameter": "concept-density",
                "adjustment": "set",
                "value": 0.55,
                "rationale": "Moderate pace can handle 2-3 concepts per session"
              }
            ]
          }
        ]
      }
    },
    {
      "id": "adapt_to_interaction_style",
      "name": "Adapt to Interaction Style",
      "description": "Adjust questioning and engagement based on interaction preference",
      "section": "interaction_adaptation",
      "config": {
        "adaptationRules": [
          {
            "condition": {
              "profileKey": "interactionStyle",
              "value": "conversational"
            },
            "actions": [
              {
                "targetParameter": "socratic-questioning",
                "adjustment": "set",
                "value": 0.85,
                "rationale": "Conversational learners engage well with questions"
              },
              {
                "targetParameter": "engagement-prompts",
                "adjustment": "set",
                "value": 0.8,
                "rationale": "Conversational learners like to be drawn into dialogue"
              },
              {
                "targetParameter": "formality-level",
                "adjustment": "set",
                "value": 0.3,
                "rationale": "Conversational learners prefer informal tone"
              }
            ]
          },
          {
            "condition": {
              "profileKey": "interactionStyle",
              "value": "direct"
            },
            "actions": [
              {
                "targetParameter": "socratic-questioning",
                "adjustment": "set",
                "value": 0.3,
                "rationale": "Direct learners prefer clear answers over questions"
              },
              {
                "targetParameter": "engagement-prompts",
                "adjustment": "set",
                "value": 0.2,
                "rationale": "Direct learners don't want to be prompted"
              },
              {
                "targetParameter": "formality-level",
                "adjustment": "set",
                "value": 0.7,
                "rationale": "Direct learners prefer professional, clear communication"
              }
            ]
          },
          {
            "condition": {
              "profileKey": "interactionStyle",
              "value": "guided"
            },
            "actions": [
              {
                "targetParameter": "socratic-questioning",
                "adjustment": "set",
                "value": 0.6,
                "rationale": "Guided learners benefit from moderate questioning"
              },
              {
                "targetParameter": "scaffolding",
                "adjustment": "set",
                "value": 0.8,
                "rationale": "Guided learners need structured support"
              }
            ]
          }
        ]
      }
    },
    {
      "id": "adapt_to_question_frequency",
      "name": "Adapt to Question Frequency",
      "description": "Adjust responsiveness based on how often learner asks questions",
      "section": "engagement_adaptation",
      "config": {
        "adaptationRules": [
          {
            "condition": {
              "profileKey": "questionFrequency",
              "value": "frequent"
            },
            "actions": [
              {
                "targetParameter": "pause-for-questions",
                "adjustment": "set",
                "value": 0.85,
                "rationale": "Frequent questioners need space to ask"
              },
              {
                "targetParameter": "chunk-size",
                "adjustment": "set",
                "value": 0.4,
                "rationale": "Frequent questioners need smaller chunks to digest"
              }
            ]
          },
          {
            "condition": {
              "profileKey": "questionFrequency",
              "value": "rare"
            },
            "actions": [
              {
                "targetParameter": "pause-for-questions",
                "adjustment": "set",
                "value": 0.3,
                "rationale": "Rare questioners prefer continuous flow"
              },
              {
                "targetParameter": "chunk-size",
                "adjustment": "set",
                "value": 0.8,
                "rationale": "Rare questioners can handle larger information chunks"
              },
              {
                "targetParameter": "check-for-understanding",
                "adjustment": "set",
                "value": 0.7,
                "rationale": "Rare questioners need proactive comprehension checks"
              }
            ]
          }
        ]
      }
    },
    {
      "id": "adapt_to_feedback_style",
      "name": "Adapt to Feedback Style",
      "description": "Adjust feedback detail based on learner preference",
      "section": "feedback_adaptation",
      "config": {
        "adaptationRules": [
          {
            "condition": {
              "profileKey": "feedbackStyle",
              "value": "detailed"
            },
            "actions": [
              {
                "targetParameter": "explanation-depth",
                "adjustment": "increase",
                "delta": 0.15,
                "rationale": "Detailed feedback preference indicates desire for depth"
              },
              {
                "targetParameter": "error-elaboration",
                "adjustment": "set",
                "value": 0.85,
                "rationale": "Detailed feedback learners want thorough error explanations"
              }
            ]
          },
          {
            "condition": {
              "profileKey": "feedbackStyle",
              "value": "summarized"
            },
            "actions": [
              {
                "targetParameter": "explanation-depth",
                "adjustment": "decrease",
                "delta": 0.15,
                "rationale": "Summarized feedback preference indicates desire for brevity"
              },
              {
                "targetParameter": "error-elaboration",
                "adjustment": "set",
                "value": 0.4,
                "rationale": "Summarized feedback learners want concise error messages"
              }
            ]
          }
        ]
      }
    }
  ],
  "triggers": [
    {
      "name": "Adapt Behavior to Learner Profile",
      "given": "Learner profile has been updated",
      "when": "ADAPT pipeline stage runs",
      "then": "Update CallerTarget with profile-based adjustments",
      "actions": [
        {
          "description": "Apply learning style adaptations",
          "parameterId": "adapt_to_learning_style",
          "weight": 1.0
        },
        {
          "description": "Apply pace adaptations",
          "parameterId": "adapt_to_pace_preference",
          "weight": 1.0
        },
        {
          "description": "Apply interaction adaptations",
          "parameterId": "adapt_to_interaction_style",
          "weight": 1.0
        },
        {
          "description": "Apply question frequency adaptations",
          "parameterId": "adapt_to_question_frequency",
          "weight": 1.0
        },
        {
          "description": "Apply feedback style adaptations",
          "parameterId": "adapt_to_feedback_style",
          "weight": 1.0
        }
      ]
    }
  ],
  "config": {
    "notes": [
      "Adaptations are applied as CallerTarget entries",
      "CallerTarget entries override default BehaviorTarget values",
      "Multiple adaptations can affect the same parameter (e.g., explanation-depth)",
      "Adjustment methods: 'set' (absolute), 'increase' (add delta), 'decrease' (subtract delta)",
      "Adaptations only apply if profile confidence > minimumConfidence (0.6)"
    ],
    "examples": [
      {
        "profile": {
          "learningStyle": "visual",
          "pacePreference": "slow",
          "interactionStyle": "conversational"
        },
        "adaptations": [
          {
            "parameter": "example-richness",
            "value": 0.9
          },
          {
            "parameter": "analogy-usage",
            "value": 0.85
          },
          {
            "parameter": "explanation-depth",
            "value": 0.85
          },
          {
            "parameter": "concept-density",
            "value": 0.3
          },
          {
            "parameter": "socratic-questioning",
            "value": 0.85
          }
        ]
      }
    ]
  }
}
